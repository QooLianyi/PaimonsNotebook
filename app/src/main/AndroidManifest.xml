<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lianyi.paimonsnotebook">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".util.PaiMonsNoteBook"
        android:allowBackup="true"
        android:icon="@drawable/icon_klee"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/paimonNoteTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.lianyi.paimonsnotebook.ui.activity.DailySignActivity"></activity>
        <activity android:name="com.lianyi.paimonsnotebook.ui.activity.HoYoLabLoginActivity"></activity>
        <activity android:name="com.lianyi.paimonsnotebook.ui.activity.WeaponDetailActivity" />
        <activity android:name="com.lianyi.paimonsnotebook.ui.activity.CharacterDetailActivity" />
        <activity android:name=".LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.options.OptionsActivity" />

        <meta-data
            android:name="design_width_in_dp"
            android:value="400" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="700" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"></activity>
    </application>

</manifest>