<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lianyi.paimonsnotebook">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".util.PaiMonsNoteBook"
        android:allowBackup="true"
        android:icon="@drawable/icon_klee"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/paimonsNoteTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.activity.SetCookieActivity"></activity>
        <activity android:name=".ui.activity.options.ContentMarginActivity" />
        <activity android:name=".ui.activity.options.SideBarButtonSettingActivity" />
        <activity android:name=".ui.activity.SearchResultCharacterDetailActivity" />
        <activity android:name=".ui.activity.SearchResultActivity" />
        <activity android:name=".ui.activity.home.MonthLedgerActivity" />
        <activity android:name=".ui.activity.home.AccountManagerActivity" />
        <activity android:name=".ui.activity.LoadingGachaWishHistoryActivity" />
        <activity android:name=".ui.activity.home.DailySignActivity" />
        <activity android:name=".ui.activity.HoYoLabLoginActivity" />
        <activity android:name=".ui.activity.WeaponDetailActivity" />
        <activity android:name=".ui.activity.CharacterDetailActivity" />
        <activity android:name=".ui.activity.EmptyActivity" />
        <activity android:name=".ui.LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.options.OptionsActivity" />

        <meta-data
            android:name="design_width_in_dp"
            android:value="400" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="700" />

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" />
    </application>

</manifest>