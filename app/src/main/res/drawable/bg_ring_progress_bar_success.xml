<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="ring"
            android:innerRadiusRatio="2.8"
            android:useLevel="false">
            <solid android:color="@color/success_track" />
        </shape>
    </item>

    <item>
        <rotate android:fromDegrees="270" android:toDegrees="270">
            <shape
                android:innerRadiusRatio="2.8"
                android:shape="ring"
                android:useLevel="true">
                <solid android:color="@color/success" />
            </shape>
        </rotate>
    </item>
    <item android:bottom="50.6dp">
        <shape
            android:innerRadiusRatio="1000"
            android:shape="ring"
            android:thickness="3.24dp"
            android:useLevel="false">
            <solid android:color="@color/success" />
        </shape>
    </item>
    <item>
        <rotate>
            <inset android:insetBottom="50.6dp">
                <shape
                    android:innerRadiusRatio="1000"
                    android:shape="ring"
                    android:thickness="3.24dp"
                    android:useLevel="false">
                    <solid android:color="@color/success" />
                </shape>
            </inset>
        </rotate>
    </item>
</layer-list>