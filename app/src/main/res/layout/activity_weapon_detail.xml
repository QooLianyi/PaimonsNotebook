<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingTop="15dp"
    tools:context=".ui.activity.WeaponDetailActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:id="@+id/scroll"
        android:paddingBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:background="@color/entity_detail_title_background"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:background="@drawable/entity_detail_title_text_background"
                            android:layout_margin="2dp"
                            android:text="NAME"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:id="@+id/name"
                            />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/icon_entity_detail_title_right_top"
                            android:layout_gravity="right"
                            />
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/icon_entity_detail_title_right_bottom"
                            android:layout_gravity="right|bottom"
                            />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/icon_entity_detail_title_left_top"
                            android:layout_gravity="left"
                            />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/icon_entity_detail_title_left_bottom"
                            android:layout_gravity="left|bottom"
                            />
                    </FrameLayout>

                    <!--            内容部分-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/entity_detail_content_background"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp"
                            android:background="@color/entity_detail_content_background"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:id="@+id/star_background"
                                    android:scaleType="centerCrop"
                                    android:paddingTop="10dp"
                                    />
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:id="@+id/icon"
                                    />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="@drawable/block_entity_detail_background"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="名称"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical"
                                    android:padding="8dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:background="@color/entity_detail_subtitle_background"
                                    android:layout_marginStart="1dp"
                                    />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/entity_detail_br_color"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="装备类型"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical"
                                    android:padding="8dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:background="@color/entity_detail_subtitle_background"
                                    android:layout_marginStart="1dp"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="星级"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical"
                                    android:padding="8dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:background="@color/entity_detail_subtitle_background"
                                    android:layout_marginStart="1dp"
                                    />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical"
                                    android:padding="8dp"
                                    android:textColor="@color/black"
                                    android:background="@drawable/block_entity_detail_background"
                                    android:id="@+id/sub_name"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical"
                                    android:padding="8dp"
                                    android:textColor="@color/black"
                                    android:background="@drawable/block_entity_detail_background"
                                    android:id="@+id/weapon_type"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:textSize="20sp"
                                    android:gravity="center_vertical"
                                    android:background="@drawable/block_entity_detail_background"
                                    android:id="@+id/star"
                                    android:paddingStart="8dp"
                                    android:textColor="@color/star_color"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:background="@color/entity_detail_title_background"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_margin="2dp"
                            android:text="Lv.90的属性"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_right_top"
                            android:layout_gravity="right"
                            />
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_right_bottom"
                            android:layout_gravity="right|bottom"
                            />
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_left_top"
                            android:layout_gravity="left"
                            />
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_left_bottom"
                            android:layout_gravity="left|bottom"
                            />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/entity_detail_content_background"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.1"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:background="@color/entity_detail_subtitle_background"
                            android:text="基础攻击力"
                            android:padding="5dp"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:text="10000"
                            android:padding="5dp"
                            android:id="@+id/atk"
                            android:gravity="center|start"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:background="@color/entity_detail_subtitle_background"
                            android:text="防御力"
                            android:padding="5dp"
                            android:id="@+id/attribute"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:text="10000"
                            android:padding="5dp"
                            android:id="@+id/attribute_value"
                            />

                    </LinearLayout>




                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:background="@color/entity_detail_title_background"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_margin="2dp"
                            android:text="装备描述"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_right_top"
                            android:layout_gravity="right"
                            />
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_right_bottom"
                            android:layout_gravity="right|bottom"
                            />
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_left_top"
                            android:layout_gravity="left"
                            />
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_left_bottom"
                            android:layout_gravity="left|bottom"
                            />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:background="@color/entity_detail_content_background"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/entity_detail_intensify_text_color"
                            android:text="精炼(1/2/3/4/5)阶"
                            android:layout_marginBottom="5dp"
                            android:textSize="14sp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="EffectName"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:id="@+id/effect_name"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Effect"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:id="@+id/effect"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/entity_detail_br_color"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="story"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:id="@+id/story"
                            />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--    材料部分-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:background="@color/entity_detail_title_background"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_margin="2dp"
                            android:text="武器突破材料"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_right_top"
                            android:layout_gravity="right"
                            />
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_right_bottom"
                            android:layout_gravity="right|bottom"
                            />
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_left_top"
                            android:layout_gravity="left"
                            />
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_left_bottom"
                            android:layout_gravity="left|bottom"
                            />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_information"
                            android:layout_gravity="end|center"
                            android:layout_marginEnd="12dp"
                            android:alpha="0.5"
                            android:id="@+id/information"
                            />

                    </FrameLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:background="@color/entity_detail_content_background"
                        >
                        <include layout="@layout/item_material"
                            android:id="@+id/daily_material"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            />
                        <include layout="@layout/item_material"
                            android:id="@+id/elite_material"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            />
                        <include layout="@layout/item_material"
                            android:id="@+id/monster_material"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>