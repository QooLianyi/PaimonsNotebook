<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingTop="15dp"
    android:background="@color/white"
    tools:context=".ui.activity.CharacterDetailActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:background="@color/entity_detail_title_background"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:background="@drawable/entity_detail_title_text_background"
                            android:layout_margin="2dp"
                            android:text="NAME"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:id="@+id/name"
                            />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/icon_entity_detail_title_right_top"
                            android:layout_gravity="right"
                            />
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/icon_entity_detail_title_right_bottom"
                            android:layout_gravity="right|bottom"
                            />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/icon_entity_detail_title_left_top"
                            android:layout_gravity="left"
                            />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/icon_entity_detail_title_left_bottom"
                            android:layout_gravity="left|bottom"
                            />
                    </FrameLayout>

                    <!--            内容部分-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/entity_detail_content_background"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp"
                            android:background="@color/entity_detail_content_background"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:id="@+id/icon"
                                />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="@drawable/block_entity_detail_background"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="所属"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical"
                                    android:padding="8dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:background="@color/entity_detail_subtitle_background"
                                    android:layout_marginStart="1dp"
                                    />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/entity_detail_br_color"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="神之眼"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical"
                                    android:padding="8dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:background="@color/entity_detail_subtitle_background"
                                    android:layout_marginStart="1dp"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="武器类型"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical"
                                    android:padding="8dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:background="@color/entity_detail_subtitle_background"
                                    android:layout_marginStart="1dp"
                                    />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical"
                                    android:padding="8dp"
                                    android:textColor="@color/black"
                                    android:background="@drawable/block_entity_detail_background"
                                    android:id="@+id/area"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical"
                                    android:padding="8dp"
                                    android:textColor="@color/black"
                                    android:background="@drawable/block_entity_detail_background"
                                    android:id="@+id/character_property"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical"
                                    android:padding="8dp"
                                    android:textColor="@color/black"
                                    android:background="@drawable/block_entity_detail_background"
                                    android:id="@+id/equip_type"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:background="@color/entity_detail_title_background"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_margin="2dp"
                            android:text="Lv.90的属性"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_right_top"
                            android:layout_gravity="right"
                            />
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_right_bottom"
                            android:layout_gravity="right|bottom"
                            />
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_left_top"
                            android:layout_gravity="left"
                            />
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_left_bottom"
                            android:layout_gravity="left|bottom"
                            />

                    </FrameLayout>

                    <!--            属性部分-->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/entity_detail_content_background"
                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:id="@+id/property_list"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:orientation="vertical"
                            android:scrollbars="none"
                            android:overScrollMode="never"
                            />
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--    材料部分-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:background="@color/entity_detail_title_background"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_margin="2dp"
                            android:text="技能升级材料"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_right_top"
                            android:layout_gravity="right"
                            />
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_right_bottom"
                            android:layout_gravity="right|bottom"
                            />
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_left_top"
                            android:layout_gravity="left"
                            />
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_entity_detail_subtitle_left_bottom"
                            android:layout_gravity="left|bottom"
                            />

                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/entity_detail_content_background"
                        android:paddingBottom="10dp"
                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:id="@+id/materials_list"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="4"
                            android:paddingTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:scrollbars="none"
                            android:overScrollMode="never"
                            />
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>