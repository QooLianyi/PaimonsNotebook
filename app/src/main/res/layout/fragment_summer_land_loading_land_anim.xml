<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    android:id="@+id/load_anim"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/fragment_summer_land_loading_land_anim_scene"
    app:layout_constraintTop_toBottomOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.summerland.SummerLandLoadingLandAnimFragment"
    >

    <FrameLayout
        android:id="@+id/background_part_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingEnd="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_home_background"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:scaleType="centerCrop"
            android:layout_marginBottom="260dp"
            android:paddingEnd="200dp"
            android:src="@drawable/img_summer_land_wave_5" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_gravity="bottom"
            android:layout_marginBottom="130dp"
            android:paddingEnd="300dp"
            android:src="@drawable/img_summer_land_wave_4" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="bottom"
            android:src="@drawable/img_summer_land_wave_1"
            android:scaleType="centerCrop"
            />

    </FrameLayout>

    <ImageView
        android:id="@+id/island"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="350dp"
        android:layout_gravity="bottom"
        android:paddingStart="280dp"
        android:src="@drawable/img_summer_land_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <FrameLayout
        android:id="@+id/background_part_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_gravity="bottom"
            android:src="@drawable/img_summer_land_wave_2"
            android:paddingEnd="500dp"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:layout_width="150dp"
            android:scaleType="centerCrop"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:paddingEnd="120dp"
            android:src="@drawable/img_summer_land_stone_1"
            android:translationY="-80dp"
            />

    </FrameLayout>


    <ImageView
        android:id="@+id/summer_land_notice"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="160dp"
        android:src="@drawable/icon_summer_land_notice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/boss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="260dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_summer_land_boss"

            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="5dp"
            android:src="@drawable/img_summer_land_boss_effect" />

    </FrameLayout>

    <ImageView
        android:id="@+id/work_table"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="78dp"
        android:src="@drawable/img_summer_land_work_table"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/enemy"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="230dp"
        android:src="@drawable/img_summer_land_enemy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <FrameLayout
        android:id="@+id/music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:alpha="0.8"
            android:padding="15dp"
            android:src="@drawable/icon_feather_ball" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/img_summer_land_bubble" />

    </FrameLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>
