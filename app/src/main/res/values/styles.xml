<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<!--    APP样式-->
    <style name="PaimonsNotebookTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/star_color</item>
        <item name="colorPrimaryDark">@color/menu_background_color</item>
        <item name="colorAccent">@color/accent_blue</item>
        <item name="android:forceDarkAllowed">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="PaimonsNotebookLaunchTheme" parent="PaimonsNotebookTheme">
<!--        <item name="android:windowBackground">@drawable/icon_klee</item>-->
    </style>

<!--    -->
    <style name="homeTopMenuTextStyle">
        <item name="android:textColor">@color/menu_un_select_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

<!--    复选框样式-->
    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_box_select</item>
    </style>

    <style name="tabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomBottomStyle" parent="@android:style/TextAppearance.Small"
        >
        <item name="android:textColor">#fff</item>
    </style>

</resources>